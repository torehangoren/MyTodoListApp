<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:f="sap.f" controllerName="goto.todo.controller.App" displayBlock="true">
	<App id="app">
		<Page title="{i18n>TITLE_LOGIN}">
			<content>
				<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
					<items>
						<Input id="uid" placeholder="{i18n>INPUT_USER}"></Input>
						<Input id="pasw" placeholder="{i18n>INPUT_PASSWORD}" type="Password"></Input>
						<Button width="12rem" text="{i18n>SUBMIT_USER}" type="Emphasized" press="onLoginTap"></Button>
					</items>
				</VBox>
			</content>

			<footer>
				<OverflowToolbar id="otbFooter">
					<ToolbarSpacer/>
						<Button text="{i18n>MAIN_FOOTER_HINT}"/>
				</OverflowToolbar>
			</footer>
		</Page>
	</App>
</mvc:View>
